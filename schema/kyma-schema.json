{
    "id": "kyma",
    "title": "kyma",
    "description": "Kyma deployment description",
    "type": "object",
    "required": [
        "apiVersion",
        "kind",
        "metadata",
        "spec"
    ],
    "properties": {
        "apiVersion": {
            "type": "string"
        },
        "kind": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "labels": {
                    "type": "object",
                    "properties": {
                        "function": {
                            "type": "string"
                        }
                    }
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "spec": {
            "type": "object",
            "required": [
                "hostname",
                "service"
            ],
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "port": {
                            "type": "number",
                            "description": "Connection port between your API and your Service"
                        }
                    }
                }
            }
        }
    }
}